<h1>Edit  <%= @tip.title %> </h1>

<form action="/tips/<%= @tip.id %>" method="post" >
  <input type="hidden" name="_method" value="put">
<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  
  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <input class="mdl-textfield__input" type="text" name="title" value="<%= @tip.title %>">
    <label class="mdl-textfield__label" for="">Title</label>
  </div>
  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <textarea class="mdl-textfield__input" name="content" ><%= @tip.content %></textarea>
    <label class="mdl-textfield__label" for="">Content</label>
  </div>
  <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
    <input class="mdl-textfield__input" type="text" name="tags" value="<%= @tip.tags_list %>">
    <label class="mdl-textfield__label" for="">Tags</label>
  </div>
  <button class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect" type="submit">Post</button>
</form>  